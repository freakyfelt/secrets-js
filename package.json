{
  "name": "@freakyfelt/secrets-js",
  "version": "0.0.0",
  "description": "Client library to make secrets fetching easy and safe",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup --clean",
    "ci": "npm run clean && npm run test:ci && npm run lint && npm run format:check && npm run build",
    "clean": "rm -rf dist",
    "format": "prettier -w src test",
    "format:check": "prettier -c src test",
    "lint": "tsc && npm run format:check",
    "test": "tsx --test src/**/*.test.ts && npm run format",
    "test:ci": "tsx --test src/**/*.test.ts"
  },
  "keywords": [
    "aws",
    "secrets",
    "manager",
    "secretsmanager"
  ],
  "author": "Bruce Felt",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    }
  },
  "peerDeependencies": {
    "@aws-sdk/client-secrets-manager": "3.x"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.936.0",
    "@testcontainers/localstack": "^11.8.1",
    "@tsconfig/node22": "^22.0.5",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
